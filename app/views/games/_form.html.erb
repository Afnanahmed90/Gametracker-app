<%= form_for @game do |f| %>
    <div class="input-field col s6">
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title %>
    </div>
    
    <div class="input-field col s6">
        <%= f.label :genre, 'Genre' %>
        <%= f.text_field :genre %>
    </div>

    <div class="input-field col s6">
        <%= f.label :cover, 'Game Cover' %>
        <%= f.text_field :cover %>
    </div>

    <div class="input-field col s6">
        <%= f.label :status, 'Game Status' %>
        <%= f.text_field :status %>
    </div>
    <%= f.submit "Submit", :class => "btn waves-effect waves-light" %>
  <% end %>